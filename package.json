{
    "name": "@ludeschersoftware/json-object-ref",
    "version": "1.0.0",
    "description": "Resolve absolute and relative references inside JSON-like objects",
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/esm/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/cjs/index.js",
            "import": "./dist/esm/index.js",
            "types": "./dist/esm/index.d.ts"
        }
    },
    "keywords": [
        "json",
        "ref",
        "reference",
        "config",
        "resolver"
    ],
    "scripts": {
        "build:cjs": "tsc --project tsconfig.commonjs.json",
        "build:esm": "tsc --project tsconfig.esnext.json",
        "build": "yarn build:cjs && yarn build:esm",
        "watch": "tsc --watch",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ludeschersoftware/JJsonObjectRef.git"
    },
    "author": "Johannes Ludescher",
    "license": "MIT",
    "devDependencies": {
        "@types/istanbul-lib-coverage": "^2.0.6",
        "@types/istanbul-lib-report": "^3.0.3",
        "@types/istanbul-reports": "^3.0.4",
        "@types/jest": "^30.0.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.0.4",
        "jsdom": "^26.1.0",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}